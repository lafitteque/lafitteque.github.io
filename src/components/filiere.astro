---
const filieres = ["MPSI", "MP", "PCSI", "PC", "PTSI", "PT"];
const actifs = [true, false, false, false, false, false];  // Liste de booléens pour activer/désactiver les liens
---

<div class="filieres-container">
  {filieres.map((filiere, index) => (
    <button class="filiere-button" disabled={!actifs[index]}>
      {actifs[index] ? (
        <a href={`../pages/${filiere}`} class="filiere-link">
          {filiere}
        </a>
      ) : (
        <span>{filiere}</span>  // Texte non cliquable si le lien est désactivé
      )}
    </button>
  ))}
</div>

<style>
  .filieres-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .filiere-button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 5px;
  }

  .filiere-button:hover {
    background-color: #45a049;
  }

  .filiere-button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }

  .filiere-link {
    color: white;
    text-decoration: none;
  }

  .filiere-link:hover {
    text-decoration: underline;
  }
</style>

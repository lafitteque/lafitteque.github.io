---
import "../styles/global.css"; // Importe le CSS global
interface Props {
  type: string;
  titre: string;
}
const { type, titre } = Astro.props;
const typeUpper = type.charAt(0).toUpperCase() + type.slice(1);
---

<div tabindex="0" class="collapse collapse-arrow ml-8 w-auto" data-pagefind-ignore="all">
  <input type="checkbox" />
  <div
    class="collapse-title bg-base-200 font-bold cursor-pointer text-lg rounded-none hover:bg-base-300"
  >
    {typeUpper} : {titre}
  </div>
  <div class="leading-10 collapse-content bg-base-200 text-lg overflow-x-auto">
    <slot />
  </div>
</div>
<div class="h-2"></div>
<script></script>

---
import "../styles/global.css"; // Importe le CSS global

import { suid } from '../libs/utils';

const { type, titre } = Astro.props;
const type_upper = type.charAt(0).toUpperCase() + String(type).slice(1)

const uniqueId = suid();
---

<details>
  <summary> {type_upper} : {titre} </summary>
  <slot/>
</details>

<style>
  details {
    margin-bottom: 2rem;
    margin-left: 5rem; 
    background-color: #fafafa;
  }
  
  details[open] {
    padding: 10px 15px;
    background-color: #fafafa;
    transition: max-height 5s ease, opacity 5s ease; /* Transition fluide */
  }
    
  summary {
    padding: 10px 15px; /* Augmente l'espace autour du texte */
    font-size: 20px;
    align-items: left;
    font-weight: bold;
    cursor: pointer;
  }
</style>
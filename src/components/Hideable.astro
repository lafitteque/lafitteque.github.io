---
import "../styles/global.css"; // Importe le CSS global
interface Props {
  type: string;
  titre: string;
}
const { type, titre } = Astro.props;
const typeUpper = type.charAt(0).toUpperCase() + type.slice(1);
---
<!-- BUG : Les themes custom de daisyui ne s'appliquent pas -->
<div tabindex="0" class="collapse ml-20">
  <input type="checkbox" />
  <div class="collapse-title bg-secondary items-start font-bold cursor-pointer text-base p-2 rounded-none"> {typeUpper} : {titre} </div>
  <div class="collapse-content bg-secondary text-base p-2">
    <slot />
  </div>
</div>
<script></script>


---
import "../styles/global.css"; // Importe le CSS global
interface Props {
  type: string;
  titre: string;
}
const { type, titre } = Astro.props;
const typeUpper = type.charAt(0).toUpperCase() + type.slice(1);
---
<div tabindex="0" class="collapse ml-20 w-auto">
  <input type="checkbox" />
  <div class="collapse-title bg-secondary font-bold cursor-pointer text-base  rounded-none "> {typeUpper} : {titre} </div>
  <div class="collapse-content bg-secondary text-base ">
    <slot />
  </div>
</div>
<script></script>


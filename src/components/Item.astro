---
import "../styles/global.css"; // Importe le CSS global
const { type, titre } = Astro.props;
const typeColors = {
  definition: "#ccf5cc",  // Vert pâle pour Définition
  theorem: "#f5cccc",     // Rouge pâle pour Théorème
  propriete: "#ffe5b4",   // Orange pâle pour Propriété
  corollaire: "#fff5b3",  // Jaune pâle pour Corollaire
};

const itemColor = typeColors[type] || "#e0e0e0"; // Couleur par défaut si type inconnu
---

<div class="item-container" style={`border-color: ${itemColor};`}>
  <div class="item-header" style={`background-color: ${itemColor};`}>
    <span class="item-number"></span>
    <strong>{type.charAt(0).toUpperCase() + type.slice(1)} : {titre}</strong>
  </div>
  <div class="item-body" style={`border: 3px solid ${itemColor}; border-bottom: 3px solid ${itemColor};`}>
    <div style="margin: 0 5px;"><slot /></div> <!-- Le contenu de l'item -->
  </div>
</div>
<br>
